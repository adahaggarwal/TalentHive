<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FDFDFD"
        android:clipToPadding="false"
        android:paddingTop="17dp"
        android:paddingBottom="178dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/bblue"
                android:textSize="24sp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center_horizontal" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/userimgplaceholder"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Details"
                android:textColor="@color/bblue"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address *"
                android:textSize="17sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:textColor="@color/bblue"
                android:fontFamily="@font/poppins_semibold" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="adahaggarwal@gmail.com"
                android:background="@drawable/cr4bffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country *"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="25dp"
                android:textColor="@color/bblue"
                android:fontFamily="@font/poppins_semibold" />

            <Spinner
                android:id="@+id/spinn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/cr4bffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number *"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="25dp"
                android:textColor="@color/bblue"
                android:fontFamily="@font/poppins_semibold" />

            <EditText
                android:id="@+id/phn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="1234567890"
                android:background="@drawable/cr4bffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Short Bio"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="25dp"
                android:textColor="@color/bblue"
                android:fontFamily="@font/poppins_semibold" />

            <EditText
                android:id="@+id/shortbio"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Write a few words about yourself..."
                android:background="@drawable/cr4bffffff" />

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/btnlay"
                android:fontFamily="@font/poppins_semibold"
                android:text="Save Changes"
                android:textColor="@color/bblue" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

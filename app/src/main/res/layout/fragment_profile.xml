<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/r904ha5nvxr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FDFDFD"
        android:clipToPadding="false"
        android:paddingTop="17dp"
        android:paddingBottom="178dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rfb4kb0qzj0e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Profile"
                    android:textColor="@color/bblue"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rji7a6l00cd"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C5C5C5"
                android:orientation="vertical" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:src="@drawable/userimgplaceholder" />

            <TextView
                android:id="@+id/rywywqgfh01m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Personal Details"
                android:textColor="@color/bblue"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:background="@drawable/cr4bffffff"
                android:orientation="vertical"
                android:paddingBottom="30dp">

                <TextView
                    android:id="@+id/rvv7uw9ycip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Email Address"
                    android:textColor="@color/bblue"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/editTextTextEmailAddress4"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="31dp"
                    android:background="@drawable/cr4bffffff"
                    android:ems="10"
                    android:hint="  adahaggarwal@gmail.com" />


                <TextView
                    android:id="@+id/r8s59dx8ia3t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="17dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Country "
                    android:textColor="@color/bblue"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/rr20xqx1elp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="29dp"
                    android:background="@drawable/cr4bffffff"
                    android:hint="Enter your country"
                    android:paddingLeft="10dp" />

                <TextView
                    android:id="@+id/rsyuqfvj23kq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="11dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Phone Number"
                    android:textColor="@color/bblue"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="35dp"
                    android:background="@drawable/cr4bffffff"
                    android:ems="10"
                    android:hint="Enter your phone number"
                    android:inputType="phone"
                    android:paddingLeft="10dp" />


                <TextView
                    android:id="@+id/rsivxwf4tos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="11dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Portfolio  Link"
                    android:textColor="@color/bblue"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/rqm0hjlb"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="35dp"
                    android:background="@drawable/cr4bffffff"
                    android:hint="Enter your portfolio link"
                    android:paddingLeft="10dp" />

                <TextView
                    android:id="@+id/rfrvbzpqilcn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Work Experience"
                    android:textColor="@color/bblue"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/rd4rvuul"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="31dp"
                    android:background="@drawable/cr4bffffff"
                    android:hint="Enter your work experience"
                    android:paddingLeft="10dp" />

                <TextView
                    android:id="@+id/rizr72egzq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="11dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Language"
                    android:textColor="@color/bblue"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/rqm0hjlbn6o"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="35dp"
                    android:background="@drawable/cr4bffffff"
                    android:hint="Enter your portfolio link"
                    android:paddingLeft="10dp" />

                <Button
                    android:id="@+id/btn_Savechanges"
                    style="@style/CustomButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/btnlay"
                    android:backgroundTint="@null"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="Save Changes"

                    android:textColor="#ffffff"
                    android:textSize="17dp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:clipToPadding="false"
        android:id="@+id/r2x8hyeblwt7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:paddingTop="17dp"
        android:paddingBottom="421dp"
        android:paddingLeft="29dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/r5f9m8hp3z2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="37dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:text="Forgot\npassword?"
                android:textColor="#000000"
                android:textSize="36sp" />

            <LinearLayout
                android:id="@+id/rrnppbihvqkc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="29dp"
                android:layout_marginBottom="29dp"
                android:background="@drawable/sa8a8a9sw1cr10bf3f3f3"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"
                android:paddingVertical="21dp">

                <ImageView
                    android:id="@+id/rj6vhlhr2da"
                    android:layout_width="20dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/baseline_email_24" />

                <TextView
                    android:id="@+id/rxgpcuyar8c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Enter your email address"
                    android:textColor="#676767"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/rmv1y5rpmhel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="47dp"
                android:layout_weight="1"
                android:text="* We will send you a message to set or reset your new password"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/rwnafiwj559"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="29dp"
                android:background="@drawable/cr4b1a174d"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingVertical="19dp">

                <TextView
                    android:id="@+id/r6gwclynqjzy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Submit"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
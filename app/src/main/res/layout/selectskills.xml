<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <!-- Title and subtitle -->

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="21dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Select Your Skills"
                android:textColor="#1F2024"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="41dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Choose your interests."
                android:textColor="#71727A"
                android:textSize="14sp"/>

            <!-- Skill 1 -->
            <CheckBox
                android:id="@+id/skillCheckbox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="41dp"
                android:background="@drawable/cr4bffffff"
                android:gravity="center_vertical"
                android:paddingHorizontal="17dp"
                android:paddingVertical="20dp"
                android:fontFamily="@font/poppins"
                android:text="Programming &amp; Tech"
                android:textColor="#1F2024"
                android:textSize="14sp" />

            <!-- Skill 2 -->
            <CheckBox
                android:id="@+id/skillCheckbox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="41dp"
                android:background="@drawable/cr4bffffff"
                android:paddingHorizontal="17dp"
                android:paddingVertical="21dp"
                android:fontFamily="@font/poppins"
                android:text="Digital Marketing"
                android:textColor="#1F2024"
                android:textSize="14sp" />

            <!-- Skill 3 -->
            <CheckBox
                android:id="@+id/skillCheckbox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="41dp"
                android:background="@drawable/cr4bffffff"
                android:gravity="center_vertical"
                android:paddingHorizontal="17dp"
                android:paddingVertical="20dp"
                android:fontFamily="@font/poppins"
                android:text="Writing &amp; Translation"
                android:textColor="#1F2024"
                android:textSize="14sp" />

            <!-- Skill 4 -->
            <CheckBox
                android:id="@+id/skillCheckbox4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="41dp"
                android:background="@drawable/cr4bffffff"
                android:paddingHorizontal="17dp"
                android:paddingVertical="21dp"
                android:fontFamily="@font/poppins"
                android:text="Video &amp; Animation"
                android:textColor="#1F2024"
                android:textSize="14sp" />

            <!-- Skill 5 -->
            <CheckBox
                android:id="@+id/skillCheckbox5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="41dp"
                android:background="@drawable/cr4bffffff"
                android:paddingHorizontal="17dp"
                android:paddingVertical="21dp"
                android:fontFamily="@font/poppins"
                android:text="Music &amp; Audio"
                android:textColor="#1F2024"
                android:textSize="14sp" />

            <!-- Skill 6 -->
            <CheckBox
                android:id="@+id/skillCheckbox6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/cr4bffffff"
                android:paddingHorizontal="16dp"
                android:paddingVertical="21dp"
                android:fontFamily="@font/poppins"
                android:text="Graphics &amp; Design"
                android:textColor="#1F2024"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/done"
        style="@style/CustomButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btnlay"
        android:backgroundTint="@null"
        android:fontFamily="@font/poppins"
        android:text="Done"
        android:enabled="false" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/skillContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title and subtitle -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="21dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Select Your Skills"
                android:textColor="#1F2024"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Choose your interests."
                android:textColor="#71727A"
                android:textSize="20sp" />

            <!-- Instruction Text -->
            <TextView
                android:id="@+id/instructionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="(Minimum of three)"
                android:textColor="#FF0000" />

            <!-- Search View for Skills -->
            <SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/searchlay"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:queryHint="Search your Skill" />

            <!-- Add new skill section with EditText and Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <EditText
                    android:id="@+id/editTextAddSkill"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/cr4bffffff"
                    android:hint="  Add a new skill"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="#1F2024"
                    android:textColorHint="#71727A" />

                <Button
                    android:id="@+id/addSkillButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:backgroundTint="@null"
                    style="@style/CustomButtonStyle"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:background="@drawable/btnlay"
                    android:fontFamily="@font/poppins_bold"/>
            </LinearLayout>

            <!-- Container for dynamically added skills -->
            <LinearLayout
                android:id="@+id/skillsAddedLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>

    <!-- Done button -->
    <Button
        android:id="@+id/done"
        style="@style/CustomButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btnlay"
        android:backgroundTint="@null"
        android:fontFamily="@font/poppins"
        android:text="Done"
        android:enabled="false" />
</LinearLayout>

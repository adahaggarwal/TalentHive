<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/r97mvpm2k6af"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:clipChildren="false"

        android:paddingBottom="57dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rkoj9kky6g6o"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="32dp"
                android:paddingVertical="16dp" />

            <RelativeLayout
                android:id="@+id/r94hknz09yy7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rr5pf7z2780j"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:id="@+id/rq85rs59qdg"
                            android:layout_width="20dp"
                            android:layout_height="19dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/baseline_arrow_back_ios_24" />

                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:id="@+id/relztcfx3wm9"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"></LinearLayout>

                        <TextView
                            android:id="@+id/r3q7c4ei03er"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="90dp"
                            android:text="Jason Adam"
                            android:textColor="#1F2024"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/rhk6bnv53dvp"
                android:layout_width="105dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/cr4bffffff"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="15dp">

                <TextView
                    android:id="@+id/rxkj3hrrnizq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Brooke"
                    android:textColor="#71727A"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/rxwg1u650scd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hey Lucas!"
                    android:textColor="#1F2024"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/r8tonbdngk1k"
                android:layout_width="183dp"
                android:layout_height="55dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/cr4bffffff"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingVertical="16dp">

                <TextView
                    android:id="@+id/ry672blrjhp9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How's the work going?"
                    android:textColor="#1F2024"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ru7nrhgbhau"
                android:layout_width="251dp"
                android:layout_height="55dp"
                android:layout_marginHorizontal="17dp"
                android:layout_marginStart="120dp"
                android:layout_marginBottom="10dp"
                android:background="#006FFD"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="5dp"
                android:paddingVertical="16dp">

                <TextView
                    android:id="@+id/rbja8bqwn05c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="It's going well. Thanks for asking!"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rqelw9cb0v0n"
                android:layout_width="241dp"
                android:layout_height="95dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="269dp"
                android:background="@drawable/cr4bffffff"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="15dp">

                <TextView
                    android:id="@+id/rhz8wjhghjqt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Brooke"
                    android:textColor="#71727A"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/rn1hbr9mz8ko"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No worries. Let me know if you \nneed any more information "
                    android:textColor="#1F2024"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rwy8chlkgfk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rozrjgluzei"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:layout_marginEnd="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/baseline_add_24" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/baseline_add_24" />

                <LinearLayout
                    android:id="@+id/r334jte8hlax"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/cr4bffffff"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">

                    <TextView
                        android:id="@+id/rviala79h14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type a message..."
                        android:textColor="#8F9098"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
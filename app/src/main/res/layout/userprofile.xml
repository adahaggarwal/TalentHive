<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp">
    <ScrollView
        android:clipToPadding="false"
        android:id="@+id/r904ha5nvxr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FDFDFD"
        android:paddingTop="17dp"
        android:paddingBottom="178dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rfb4kb0qzj0e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profile"
                    android:textColor="@color/bblue"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="24sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Profile"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rji7a6l00cd"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C5C5C5"
                android:layout_marginHorizontal="5dp"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/userimgplaceholder"
                    android:layout_gravity="center" />
            </LinearLayout>

            <!-- Login Details Section -->
            <TextView
                android:id="@+id/logindetails"
                android:textColor="@color/bblue"
                android:textSize="25dp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="25dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Login Details"
                />

            <TextView
                android:id="@+id/rvv7uw9ycip"
                android:textColor="@color/bblue"
                android:textSize="17dp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="25dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Email Address"
                />
            <EditText
                android:id="@+id/email"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/cr4bffffff"
                android:layout_marginBottom="31dp"
                android:layout_marginHorizontal="24dp"
                android:paddingVertical="19dp"
                android:paddingHorizontal="20dp"
                android:hint="Enter email address"/>

            <TextView
                android:id="@+id/rkuaslo5402f"
                android:textColor="@color/bblue"
                android:textSize="17dp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="25dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Password"
                />
            <EditText
                android:id="@+id/password"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/cr4bffffff"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="24dp"
                android:paddingVertical="17dp"
                android:paddingHorizontal="20dp"
                android:inputType="textPassword"
                android:hint="Enter password"/>

            <TextView
                android:id="@+id/r0zuvvzqg0ne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="37dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Change Password"
                android:textAlignment="viewEnd"
                android:textColor="#1A174D"
                android:textSize="12sp" />

            <!-- Personal Details Section -->
            <TextView
                android:id="@+id/rywywqgfh01m"
                android:textColor="@color/bblue"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="26dp"
                android:layout_marginStart="25dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Personal Details"
                />

            <TextView
                android:id="@+id/r8s59dx8ia3t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="17dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Country"
                android:textColor="@color/bblue"
                android:textSize="17dp" />
            <EditText
                android:id="@+id/country"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/cr4bffffff"
                android:layout_marginBottom="29dp"
                android:layout_marginHorizontal="24dp"
                android:paddingVertical="19dp"
                android:paddingHorizontal="20dp"
                android:hint="Enter country"/>

            <TextView
                android:id="@+id/rsyuqfvj23kq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="11dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Phone Number"
                android:textColor="@color/bblue"
                android:textSize="17dp" />
            <EditText
                android:id="@+id/phone"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/cr4bffffff"
                android:layout_marginBottom="35dp"
                android:layout_marginHorizontal="24dp"
                android:paddingVertical="19dp"
                android:paddingHorizontal="20dp"
                android:hint="Enter phone number"/>

            <TextView
                android:id="@+id/rsivxwf4tos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="11dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Portfolio Link"
                android:textColor="@color/bblue"
                android:textSize="17dp" />
            <EditText
                android:id="@+id/portfolio"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/cr4bffffff"
                android:layout_marginBottom="35dp"
                android:layout_marginHorizontal="24dp"
                android:paddingVertical="19dp"
                android:paddingHorizontal="20dp"
                android:hint="Enter portfolio link"/>

            <TextView
                android:id="@+id/rfrvbzp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Work Experience"
                android:textColor="@color/bblue"
                android:textSize="17dp" />
            <EditText
                android:id="@+id/work_experience"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/cr4bffffff"
                android:layout_marginBottom="31dp"
                android:layout_marginHorizontal="24dp"
                android:paddingVertical="19dp"
                android:paddingHorizontal="20dp"
                android:hint="Enter work experience"/>

            <TextView
                android:id="@+id/rfrvbzpqilcn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Languages"
                android:textColor="@color/bblue"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/languages"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/cr4bffffff"
                android:layout_marginBottom="31dp"
                android:layout_marginHorizontal="24dp"
                android:paddingVertical="19dp"
                android:paddingHorizontal="20dp"
                android:hint="Enter language"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Save"
        android:background="@color/bblue"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
</LinearLayout>

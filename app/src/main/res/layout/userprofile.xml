<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/r904ha5nvxr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FDFDFD"
        android:clipToPadding="false"
        android:paddingTop="17dp"
        android:paddingBottom="178dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rfb4kb0qzj0e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Profile"
                    android:textColor="@color/bblue"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rji7a6l00cd"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="5dp"
                android:background="#C5C5C5"
                android:orientation="vertical"></LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/userimgplaceholder" />

            <TextView
                android:id="@+id/logindetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Login Details"
                android:textColor="@color/bblue"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/rvv7uw9ycip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Email Address"
                android:textColor="@color/bblue"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/r82xe05psv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="31dp"
                android:background="@drawable/cr4bffffff"
                android:hint="Enter your email address"
                android:paddingHorizontal="20dp"
                android:paddingVertical="19dp"
                android:text="aashifa@gmail.com" />

            <TextView
                android:id="@+id/rkuaslo5402f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Password"
                android:textColor="@color/bblue"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/r0zuvvzqg0ne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="37dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Change Password"
                android:textAlignment="viewEnd"
                android:textColor="#1A174D"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/rywywqgfh01m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="26dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Personal Details"
                android:textColor="@color/bblue"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/r8s59dx8ia3t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="17dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Country "
                android:textColor="@color/bblue"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/rr20xqx1elp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="29dp"
                android:background="@drawable/cr4bffffff"
                android:hint="Enter your country"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/rsyuqfvj23kq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="11dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Phone Number"
                android:textColor="@color/bblue"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/rd75hs7p96lr"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="21dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/cr4bffffff"
                android:hint="Enter your phone number"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/rsivxwf4tos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="11dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Portfolio  Link"
                android:textColor="@color/bblue"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/rqm0hjlb"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="21dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/cr4bffffff"
                android:hint="Enter your portfolio link"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/rfrvbzpqilcn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Work Experience"
                android:textColor="@color/bblue"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/rd4rvuul"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="21dp"
                android:layout_marginBottom="31dp"
                android:background="@drawable/cr4bffffff"
                android:hint="Enter your work experience"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/rizr72egzq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="11dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Language"
                android:textColor="@color/bblue"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/rqm0hjlbn6o"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="21dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/cr4bffffff"
                android:hint="Enter your portfolio link"
                android:paddingLeft="10dp" />


            <LinearLayout
                android:id="@+id/rzk41wbcg0p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="34dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_Savechanges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/btnlay"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="Save Changes"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="17dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

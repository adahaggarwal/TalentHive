<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme without primary color. -->
    <style name="Base.Theme.Thrive" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- You can customize light and dark themes without specifying a primary color. -->
    </style>

    <!-- Define your main app theme, inheriting from the base, without colorPrimary -->
    <style name="Theme.Thrive" parent="Base.Theme.Thrive">
        <!-- No colorPrimary is defined to prevent any default color from being applied -->
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <!-- Disable background tint -->
        <item name="backgroundTint">@null</item>
        <!-- Optional: you can specify other button properties here -->
    </style>

    <style name="Theme.Thrive.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Thrive.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Thrive.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
